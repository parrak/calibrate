# Database
DATABASE_URL=postgresql://user:password@host:5432/calibrate

# API Configuration
NODE_ENV=production
PORT=3000

# Security
WEBHOOK_SECRET=your-webhook-secret-here
CONSOLE_INTERNAL_TOKEN=your-console-internal-token-here

# AI Features (optional - enables GPT-4 powered AI Assistant)
# If not set, AI Assistant will fall back to pattern-matching queries
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Vercel/Railway specific
NEXT_PUBLIC_API_BASE=https://api.calibr.lat

# Feature Flags
AMAZON_CONNECTOR_ENABLED=false
SHOPIFY_CONNECTOR_ENABLED=false

# Shopify Integration (optional - required for Shopify sync)
# SHOPIFY_API_KEY=your-api-key
# SHOPIFY_API_SECRET=your-api-secret
# SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders
# SHOPIFY_WEBHOOK_SECRET=your-webhook-secret  # Optional - only needed for webhook verification
# SHOPIFY_API_VERSION=2024-10
