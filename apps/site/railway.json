{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "/Dockerfile.site",
    "watchPaths": [
      "/apps/site/**",
      "/packages/**",
      "/pnpm-lock.yaml",
      "/pnpm-workspace.yaml",
      "/package.json",
      "/Dockerfile.site"
    ]
  },
  "deploy": {
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
