{
  "name": "calibrate",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:all": "turbo run dev --parallel --filter=@calibr/api --filter=@calibr/console --filter=@calibr/site",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run typecheck",
    "verify:local": "powershell -ExecutionPolicy Bypass -File ./scripts/verify-local.ps1",
    "migrate": "pnpm --filter @calibr/db prisma migrate dev",
    "migrate:check": "powershell -ExecutionPolicy Bypass -File ./scripts/migrate-check.ps1",
    "seed": "pnpm --filter @calibr/db ts-node scripts/seed.ts",
    "db:generate": "pnpm --filter @calibr/db prisma generate",
    "db:studio": "pnpm --filter @calibr/db prisma studio",
    "env:validate": "powershell -ExecutionPolicy Bypass -File ./scripts/validate-env.ps1",
    "docs:dev": "pnpm --filter @calibr/docs dev",
    "docs:build": "pnpm --filter @calibr/docs build",
    "docs:deploy": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-docs.ps1",
    "docs:deploy:staging": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-docs.ps1 -Environment staging",
    "docs:deploy:dry": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-docs.ps1 -DryRun",
    "docs:setup-domain": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-docs-domain.ps1",
    "docs:setup-domain:staging": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-docs-domain.ps1 -Environment staging",
    "staging:deploy": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-staging.ps1",
    "staging:test": "powershell -ExecutionPolicy Bypass -File ./scripts/test-staging.ps1",
    "staging:reset": "powershell -ExecutionPolicy Bypass -File ./scripts/reset-staging.ps1",
    "staging:status": "powershell -ExecutionPolicy Bypass -File ./scripts/status-staging.ps1",
    "agents:cli": "node agents/bin/agents-cli.mjs",
    "agents:list": "node agents/bin/agents-cli.mjs list-inbox",
    "encrypt:credentials": "tsx scripts/encrypt-credentials.ts",
    "encrypt:credentials:dry": "tsx scripts/encrypt-credentials.ts --dry-run --verbose",
    "aggregate:analytics": "tsx scripts/aggregate-analytics.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.55.0",
    "jsdom": "^22.1.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.0",
    "tsx": "^4.7.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "clsx": "^2.1.1",
    "prisma": "^5.22.0"
  }
}
