{
  "name": "@calibr/shopify-connector",
  "version": "0.1.0",
  "description": "Shopify Admin API connector for Calibrate pricing platform",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "shopify",
    "ecommerce",
    "pricing",
    "api",
    "connector"
  ],
  "author": "Calibrate Team",
  "license": "MIT",
  "dependencies": {
    "@calibr/platform-connector": "workspace:*",
    "@shopify/admin-api-client": "^1.0.0",
    "axios": "^1.6.0",
    "crypto": "^1.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@calibr/platform-connector": "workspace:*"
  }
}
