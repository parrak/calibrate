{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "@calibr/db#generate", "@calibr/types#generate"],
      "outputs": ["dist/**", ".next/**", "**/*.html", "**/*.yaml", "api.d.ts"]
    },
    "dev": { "cache": false },
    "lint": {},
    "test": {
      "dependsOn": ["@calibr/db#generate"]
    },
    "typecheck": {
      "dependsOn": ["^build", "@calibr/types#generate", "@calibr/db#generate"]
    },
    "generate": {
      "cache": false,
      "outputs": ["api.d.ts"]
    }
  }
}
